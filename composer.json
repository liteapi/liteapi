{
    "name": "pjpawel/light-api",
    "type": "framework",
    "license": "Apache-2.0",
    "description": "LigthApi is very fast framework that doesn't affect your architecture",
    "authors": [
        {
            "name": "pjpawel",
            "email": "pawel.jan.podgorski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "pjpawel\\LightApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pjpawel\\LightApi\\Test\\": "test/"
        }
    },
    "require": {
        "php": ">=8.1",
        "psr/container": "2.0.*",
        "gnugat/nomo-spaco": "~0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*",
        "phpstan/phpstan": "^1.9"
    },
    "scripts": {
        "unit": "vendor/bin/phpunit test\\",
        "stan": "vendor/bin/phpstan analyse",
        "all": [
            "@unit",
            "@stan"
        ]
    }
}
