{
    "name": "liteapi/liteapi",
    "type": "framework",
    "license": "Apache-2.0",
    "description": "LiteApi is very fast framework that doesn't affect your architecture",
    "authors": [
        {
            "name": "pjpawel",
            "email": "pawel.jan.podgorski@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "LiteApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LiteApi\\Test\\": "test/"
        }
    },
    "suggest": {
        "monolog/monolog": "Suggested logger library. It has extension: pjpawel\\LightApi\\Component\\Logger\\MonologExtension"
    },
    "require": {
        "php": ">=8.1",
        "psr/container": "2.0.*",
        "gnugat/nomo-spaco": "~0.4",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*",
        "phpstan/phpstan": "^1.9",
        "monolog/monolog": "^3.3",
        "symfony/cache": "^6.2"
    },
    "scripts": {
        "unit": "vendor/bin/phpunit .",
        "stan": "vendor/bin/phpstan analyse",
        "all": [
            "@unit",
            "@stan"
        ]
    }
}
